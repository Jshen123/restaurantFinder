<!DOCTYPE html>
  <html>

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Restaurant Details</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/footer.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const room_id = <%-JSON.stringify(value[0].restaurant_id)%>;
        const comments = <%-JSON.stringify(comments)%>;
        console.log(comments);
    </script>
    <script src="/scripts/restaurants_socket.js"></script>
  </head>

  <body>
    <% include ../partials/siteNav.ejs %>

    <div class="container" id="getId" data-id="<%= value[0].restaurant_id %>">
        <p class="h1 mt-4"><%= value[0].name%></p>

        <div class="row">
            <div class="col-4">
                <% restId = value[0].restaurant_id; %>
                <% imgPath = "/Pictures/restaurant_" + restId + ".jpg" %>
                <img src="<%= imgPath %>" class="img-thumbnail" width="100%">
            </div>
            <div class="col-8">
                <p><%= value[0].description %></p>
            </div>
        </div>

        <div class="container mt-2">
            <%= dollars = "";%>
            <% if (value[0].price == 1) {dollars = "$";} else if (value[0].price == 2) {dollars = "$$";} else {dollars = "$$$"} %>
            <span class="badge badge-light"><%= dollars %></span>
            <span class="badge badge-light"><%= value[0].type %></span>
        </div>

        <hr>

        <div class="row">
            <div class="col-6">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <% mapPath = "https://maps.google.com/maps?q=" + value[0].address + "&t=&z=13&ie=UTF8&iwloc=&output=embed" %>
                        <iframe width="550" height="500" id="gmap_canvas" src="<%= mapPath %>" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                        </iframe>
                        <a href="https://www.yellowrocketagency.com/%22%3E"></a>
                    </div>
                    <style>.mapouter{position:relative;text-align:right;height:500px;width:550px;}.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:550px;}</style>
                </div>
            </div>
            <div class="col-4">
                <h2><u>Hours:</u></h2>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Sunday : <%= value[0].sunday %></li>
                    <li class="list-group-item">Monday : <%= value[0].monday %></li>
                    <li class="list-group-item">Tuesday : <%= value[0].tuesday %></li>
                    <li class="list-group-item">Wednesday : <%= value[0].wednesday %></li>
                    <li class="list-group-item">Thursday : <%= value[0].thursday %></li>
                    <li class="list-group-item">Friday : <%= value[0].friday %></li>
                    <li class="list-group-item">Saturday : <%= value[0].saturday %></li>
                </ul>
            </div>
        </div>

        <hr>

        <p align="center" class="h5 m-auto"><u>Comments and Reviews</u></p>
        <br>
        <% comments.forEach(function(comment) { %>

            <div class="card bg-light p-3">
                <div class="userText">
                    <strong><%= comment.username %></strong> <span class="commentDate">at <%= comment.create_date %></span>
                </div>
                <div class="userRating">
                    <% for (i = 0; i < 5; i++) { %>
                        <% rating = parseInt(comment.rating)%>
                        <% if (i < rating) { %>
                            <span class="fa fa-star checked"></span>
                        <% } else { %>
                            <span class="fa fa-star"></span>
                        <% } %>
                    <% } %>
                </div>
                <p><%= comment.comment %></p>         
            </div>
            <br>
            
        <% }) %>

        <form id="comment-form">
            <div class="container bg-light">
                <br>
                <p align="center"><u><strong>Write a Review</strong></u></p>
                <div class="stars" data-rating="3">
                    <span class="fa fa-star rate-star"></span>
                    <span class="fa fa-star rate-star"></span>
                    <span class="fa fa-star rate-star"></span>
                    <span class="fa fa-star rate-star"></span>
                    <span class="fa fa-star rate-star"></span>
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="comment" placeholder="Thoughts?  Comments?  Put them here!" name="comment"></textarea>
                </div>
                <div class="container" style="width: 25%">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <br>
            </div>
        </form>

        

        <br>
    </div>

    <% include ../partials/siteFooter.ejs %>

    <script src="/scripts/details.js"></script>
  </body>

</html>
